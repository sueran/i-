page {
  background-color: #eee;
  margin-bottom: 100rpx;
}
page .content {
  position: relative;
}
page .content .header {
  width: 100%;
  height: 200rpx;
  background-color: #187759;
  text-align: center;
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  position: fixed;
}
page .content .wrap {
  position: absolute;
  width: 100vw;
  top: 10rpx;
  left: 50%;
  -webkit-transform: translateX(-50vw);
          transform: translateX(-50vw);
}
page .content .wrap .index-img {
  width: 90%;
  margin: 0 auto;
}
page .content .wrap .index-img ._img {
  width: 100%;
  border-radius: 20rpx;
}
page .content .wrap .monitor {
  padding: 0 20rpx;
  padding-top: 20rpx;
  background-color: white;
  margin-top: 10rpx;
}
page .content .wrap .monitor .scroll-list {
  display: flex;
  flex-direction: column;
  width: 140vw;
}
page .content .wrap .monitor .scroll-list__goods-item {
  margin-right: 20px;
  height: 160rpx;
}
page .content .wrap .monitor .scroll-list__goods-item__image {
  width: 100rpx;
  height: 80rpx;
  border-radius: 4px;
}
page .content .wrap .monitor .scroll-list__goods-item__text {
  text-align: center;
  font-size: 12px;
  margin-top: 5px;
}
page .content .wrap .number {
  width: 100vw;
  height: 430rpx;
  margin-top: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
}
page .content .wrap .number .numberTitle {
  display: flex;
  justify-content: space-between;
  padding: 0 10rpx;
  padding-bottom: 20rpx;
  font-weight: 600;
}
page .content .wrap .number .numberItem {
  display: flex;
  height: 90%;
}
page .content .wrap .number .numberItem_item {
  flex: 1;
  height: 90%;
  margin: 10rpx;
  border: #187759 solid 2rpx;
  border-radius: 10rpx;
  background-color: #e6f0ed;
  text-align: center;
}
page .content .wrap .number .numberItem_item ._img {
  width: 50%;
  margin-top: 10rpx;
}
page .content .wrap .number .numberItem_item_name {
  font-size: 30rpx;
  font-weight: 600;
}
page .content .wrap .number .numberItem_item_number {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
page .content .wrap .number .numberItem_item_number_total {
  margin-left: 10rpx;
}
page .content .wrap .number .numberItem_item_number_total .total_title {
  float: left;
}
page .content .wrap .number .numberItem_item_number_total .total_number {
  color: #aaa;
  margin-top: 5rpx;
  font-size: 25rpx;
}
page .content .wrap .number .numberItem_item_number_total .total_number text {
  color: #187759;
  font-size: 40rpx;
  font-weight: 600;
}
page .content .wrap .number .numberItem_item_number_wrong {
  margin-right: 10rpx;
}
page .content .wrap .number .numberItem_item_number_wrong .wrong_title {
  float: left;
}
page .content .wrap .number .numberItem_item_number_wrong .wrong_number {
  color: #aaa;
  margin-top: 5rpx;
  font-size: 25rpx;
}
page .content .wrap .number .numberItem_item_number_wrong .wrong_number text {
  color: red;
  font-size: 40rpx;
  font-weight: 600;
}
page .content .wrap .todayWarnList {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 100vw;
  margin-top: 20rpx;
  box-sizing: border-box;
  background-color: white;
  padding: 30rpx;
}
page .content .wrap .todayWarnList_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}
page .content .wrap .todayWarnList_top_title {
  font-weight: 600;
}
page .content .wrap .todayWarnList_content {
  width: 100%;
}
page .content .wrap .todayWarnList_content_item {
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  padding-bottom: 10rpx;
}
page .content .wrap .todayWarnList_content_item_img {
  flex: 1;
  box-sizing: border-box;
}
page .content .wrap .todayWarnList_content_item_img ._img {
  width: 70%;
}
page .content .wrap .todayWarnList_content_item_left {
  flex: 4;
  margin-left: 10rpx;
}
page .content .wrap .todayWarnList_content_item_right {
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
}
page .content .wrap .deviceData {
  width: 100%;
  margin-top: 30rpx;
  background-color: white;
  box-sizing: border-box;
}
page .content .wrap .deviceData .deviceDataTop {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  font-weight: 600;
  padding: 30rpx;
}

