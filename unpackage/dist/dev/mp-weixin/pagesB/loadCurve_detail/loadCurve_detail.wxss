page {
  background-color: #eee;
}
page .content {
  position: relative;
}
page .content .headerBackground {
  width: 100vw;
  height: 150rpx;
  background-color: #187759;
}
page .content .wrap {
  width: 94vw;
  background-color: white;
  position: absolute;
  top: 50rpx;
  left: 50%;
  -webkit-transform: translateX(-47vw);
          transform: translateX(-47vw);
  border-radius: 20rpx;
  padding-bottom: 40rpx;
}
page .content .wrap_total {
  text-align: center;
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 0;
}
page .content .wrap_total_number {
  border-bottom: 2rpx solid #ccc;
  padding: 10rpx 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #187759;
}
page .content .wrap_total_name {
  padding: 10rpx 0;
}
page .content .wrap_list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
page .content .wrap_list_item {
  width: 45%;
  height: 120rpx;
  background-color: #eee;
  margin-bottom: 20rpx;
  text-align: center;
}
page .content .wrap_list_item_number {
  line-height: 60rpx;
  color: #e9a756;
}
page .content .wrap_list_item_name {
  line-height: 60rpx;
}

